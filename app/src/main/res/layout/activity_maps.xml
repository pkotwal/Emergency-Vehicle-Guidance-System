<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<fragment
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pratik.locationtest.MapsActivity" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:visibility="gone"
        android:id="@+id/tv_tbt_directions"
        android:background="#ffffff"
        android:text="Turn by Turn Navigation"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Navigation"
        android:visibility="visible"
        android:id="@+id/b_start_navigation"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tv_tbt_directions"
        android:layout_toEndOf="@+id/tv_tbt_directions" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Navigation"
        android:id="@+id/b_quit_navigation"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
